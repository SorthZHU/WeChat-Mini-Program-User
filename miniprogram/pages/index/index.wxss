/**index.wxss**/
.haibao{
  height: 350rpx;
  width: 100%;
  border-radius: 5px;
}
.swiper-image {
  height: 100%;
  width: 100%;
}
.img{
  width: 30px;
  height: 30px;
  padding-left: 10px;
  padding-top: 10px;
}
/* 导航栏样式 */
.pubTitle{display:flex;justify-content: space-between;height: 60rpx;align-items: center;margin-top: 20rpx;margin-bottom: 20rpx;}
.pubTitle .txt{height: 100%; font-size: 40rpx;position: relative;padding-left: 20rpx;}
.pubTitle .txt::before{display: block;width: 10rpx;height: 30rpx;background: brown;content: "";position: absolute; left: 0;top: 50%;margin-top: -15rpx;}
.pubTitle .more{font-size: 34rpx;color: #666666;}

/* 新闻内容样式 */
.wkMain{display: flex;flex-wrap: wrap;justify-content: space-between;}
.wkMain .box{width: 340rpx;height: 212rpx;margin-bottom: 10rpx;position: relative;}
.wkMain .pic{width: 100%;height: 100%;}
.wkMain .ceng{width: 100%;height: 100%;   background:rgba(0, 0, 0, 0.3) ;position: absolute;top: 0;left: 0;color: #ffffff;display: flex;flex-direction: column;justify-content: center;align-items: center;padding: 0 20rpx; box-sizing: border-box;}
.wkMain .ceng .tit{font-size: 34rpx;}
.wkMain .ceng .line{width: 150rpx;height: 2rpx;background: #ffffff;margin: 10rpx 0 20rpx;}
.wkMain .ceng .des{opacity: 0.7;text-transform: uppercase;letter-spacing: 2rpx;color: #ffffff;}

.dynamic{padding: 0rpx 0 70rpx;}
.dyItem{display: flex;padding: 15rpx 0 ;border: 1rpx dashed #eeeeee;justify-content: space-between;}
.dyItem .pic{width: 230rpx;height: 150rpx;}
.dyItem .pic image{width: 100%;height: 100%;}
.dyItem .txt{width: 440rpx;display: flex;flex-direction: column;justify-content: space-between;}
.dyItem .title{font-size: 34rpx;}
.dyItem .info{font-size: 26rpx;color: #888888;}
.dyItem .info text{font-size: 22rpx;}



.one{
  width: 110px;
  height: 100px;
  padding-top: 20px;
}


.eye{
  position: relative;
  float: right;
  width: 25px;
  height: 25px;
  right:40px;
  top:-18px;

}

.num{
  position: relative;
  display: block;
  float:right;
  top:-15px;
  right: -15px;
  font-size: 12px;
}
.text{
  font-size: 14px;
  
  padding-top: 8px;
}